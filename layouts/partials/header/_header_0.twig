{% set menu1 = _Menu.get({'menuType': 'header', "menuGroupName":"main-menu-one"}) %}
{% set menu2 = _Menu.get({'menuType': 'header', "menuGroupName":"main-menu-two"}) %}
{% set miniMenu = _Menu.get({'menuType': 'header', 'menuGroupName': 'mini-menu'}) %}


{% set loggedin = _User.isGuest() ? false : true %}
{% set user = loggedin ? _User.getUser() : null %}
{% set menuSpecialClass = 'u-menu__highlight' %}
{% set menuSpecialClassItems = [] %}
{% if config['menu-highlights']['items'] is defined and config['menu-highlights']['items']|length > 0 %}
    {% set menuSpecialClassItems = config['menu-highlights']['items'] %}
{% endif %}
{% if config['menu-highlights']['class'] is defined and config['menu-highlights']['class'] != '' %}
    {% set menuSpecialClass = config['menu-highlights']['class'] %}
{% endif %}


{% set logo = networkData.templatePath~'/static/images/logo.svg'%}

{% set theDate = _AppHelper.getCurrentTimestampBasedOnTimezone() %}
{% set date = _AppHelper.getDefaultTimezoneDateTime(theDate, "l, j F Y") %}


<header class="c-header-0 u-mobile-margin-bottom-20" data-header="0">
   
    <div class="container">
        <div class="row">
            <div class="col-12 c-header-0__container">
                

                
                <div class="c-header-0-top-bar">
                    
                    {# {{this.render('../_submenu_navigation.twig', {
                        items: miniMenu,
                        class: 'c-header-0-top-bar__link',
                    }) | raw}} #}
                    <ul class="c-header-0-top-bar__ul">
                        {{ this.render('../../../partials/_menu.twig', {'menu': miniMenu, 'menuClass':'c-header-0-top-bar__link'}) | raw }}
                    </ul>
                    <div class="c-navigation-0__icons__search">
                        <div class="js-searchButton__search">{{ this.render('../../../partials/icons.twig', {icon: 'search'} ) | raw }}</div>
                        
                    </div>
                    
                    <div class="c-header-0-top-bar__social">
                        <a href="https://www.facebook.com/fortysouthtas/" target="_blank" class="c-header-0-top-bar__social__icon c-header-0-top-bar__social__icon--facebook">
                            {{ this.render('../../../partials/icons.twig', {icon: 'facebook'} ) | raw }}
                        </a>
                        <a href="https://twitter.com/fortysouth" target="_blank" class="c-header-0-top-bar__social__icon c-header-0-top-bar__social__icon--twitter">
                            {{ this.render('../../../partials/icons.twig', {icon: 'twitter'} ) | raw }}
                        </a>
                        <a href="https://www.linkedin.com/in/lucinda-sharp-95a92a30" target="_blank" class="c-header-0-top-bar__social__icon c-header-0-top-bar__social__icon--linkedin">
                            {{ this.render('../../../partials/icons.twig', {icon: 'linkedin'} ) | raw }}
                        </a>
                    </div>
                </div>
                <div class="c-search-bar u-border-bottom">
                    
                    <form class="c-search-bar__form" method="get" id="searchform" action="{{networkData.defaultBlogUrl}}/search">
                        <div class="c-search-bar__submit"></div>
                        <input class="c-search-bar__input" type="text" name="s" placeholder="Enter search term"/>
                        <button class="c-button c-search-bar__button" type="submit" id="searchsubmit">Search</button>
                        <div class="c-search-bar__close">
                            <div class="js-searchButton__close d-none">{{ this.render('../../../partials/icons.twig', {icon: 'cross'} ) | raw }}</div>
                        </div>
                    </form>
                   
                </div>
                
                <div class="c-header-0__logobar u-desktop-margin-bottom-50">
                    <a href="{{networkData.defaultBlogUrl}}" class="c-header-0__logo u-desktop-margin-top-40">
                        <img src="{{logo}}" class="image-fluid" />
                    </a>
                    <div class="c-navigation-0__icons">
                        <div class="c-navigation-0__icons__menu c-navigation-0__icons__menu--static o-hamburger js-menu"></div>
                    </div>
                </div>


                <div class="c-header-0__main-info d-none d-lg-flex">
                    <div class="c-navigation-0 c-navigation-0-md">
                        <div class="row">
                            <div class="col-12">
                                <ul class="c-navigation-0__list">
                                    {{ this.render('../../../partials/_menu.twig', {'menu': menu1, 'specialClass': menuSpecialClass, 'specialClassItems':menuSpecialClassItems}) | raw }}
                                </ul>
                            </div>
                            <div class="col-12 d-none d-lg-block">
                                <hr class="u-border-top-15 u-border-bottom-15">
                            </div>
                            <div class="col-12">
                                <ul class="c-navigation-0__list">
                                    {{ this.render('../../../partials/_menu.twig', {'menu': menu2, 'specialClass': menuSpecialClass, 'specialClassItems':menuSpecialClassItems}) | raw }}
                                </ul>
                            </div>
                        </div>                       
                    </div>
                </div>

                <div class="c-header-0__fixed c-header-0__fixed--off" id="j-menu-fixed">
                    <div class="c-header-0__main-info c-header-0__fixed-block" >
                        <a href="{{networkData.defaultBlogUrl}}" class="c-header-0__main-info__logo">
                            <img src="{{logo}}" class="image-fluid"  style="height:48px;"/>
                        </a>
                        <div class="c-navigation-0 c-navigation-0-md c-navigation-0__fixed d-none j-fixed-menu-desk">
                            <div class="row">
                                <div class="col-12 d-none d-lg-block">
                                    <hr class="u-border-bottom-15">
                                </div>
                                <div class="col-12">
                                    <ul class="c-navigation-0__list">
                                        {{ this.render('../../../partials/_menu.twig', {'menu': menu1, 'specialClass': menuSpecialClass, 'specialClassItems':menuSpecialClassItems}) | raw }}
                                    </ul>
                                </div>
                                <div class="col-12 d-none d-lg-block">
                                    <hr class="u-border-top-15 u-border-bottom-15">
                                </div>
                                <div class="col-12">
                                    <ul class="c-navigation-0__list">
                                        {{ this.render('../../../partials/_menu.twig', {'menu': menu2, 'specialClass': menuSpecialClass, 'specialClassItems':menuSpecialClassItems }) | raw }}
                                    </ul>
                                </div>
                                
                            </div>
                            <div class="c-navigation-0__icons">
                                <div class="c-navigation-0__icons__menu o-hamburger js-menu "></div>
                            </div>
                            
                        </div>
                         <div class="c-navigation-0__icons">
                            <div class="c-navigation-0__icons__menu o-hamburger js-menu d-lg-block"></div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>
    

<div class="responsive-standalone">
    
    <ul class="standalone-menu">
        <li class="c-search-bar d-block d-lg-none">
            <form class="c-search-bar__form" method="get" id="searchform" action="{{networkData.defaultBlogUrl}}/search">
                <input class="c-search-bar__input" type="text" name="s" placeholder="Enter search term"/>
                <button class="c-search-bar__button--icon" type="submit" id="searchsubmit">{{ this.render('../../../partials/icons.twig', {icon: 'search'} ) | raw }}</button>
            </form>
        </li>
        {{ this.render('../../../partials/_menu.twig', {
            'menu': menu1, 
            'specialClass': menuSpecialClass, 
            'specialClassItems': menuSpecialClassItems
            }) | raw }}
        {{ this.render('../../../partials/_menu.twig', {
            'menu': menu2, 
            'specialClass': menuSpecialClass, 
            'specialClassItems': menuSpecialClassItems
            }) | raw }}
    </ul>
    <ul class="standalone-menu-base">
        {{ this.render('../../../partials/_menu.twig', {'menu': miniMenu, 'menuClass':'c-header-0-top-bar__link'}) | raw }}
        
        <li class="">
            <div class="standalone-menu-base__social">
                <a href="" class="standalone-menu-base__social__icon standalone-menu-base__social__icon--facebook">
                    {{ this.render('../../../partials/icons.twig', {icon: 'facebook'} ) | raw }}
                </a>
                <a href="" class="standalone-menu-base__social__icon standalone-menu-base__social__icon--twitter">
                    {{ this.render('../../../partials/icons.twig', {icon: 'twitter'} ) | raw }}
                </a>
                <a href="" class="standalone-menu-base__social__icon standalone-menu-base__social__icon--linkedin">
                    {{ this.render('../../../partials/icons.twig', {icon: 'linkedin'} ) | raw }}
                </a>
            </div>
        </li>
    </ul>

    
    <div class="responsive-standalone-close">
        <div class="responsive-standalone-close-menu"><img src="{{logo}}" class="image-fluid"/></div>
        <div class="responsive-standalone-close-close o-close o-close--dark"></div>
    </div>

</div>

<div class="responsive-standalone-overlay"></div>