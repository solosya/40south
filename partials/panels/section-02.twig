{% set articleCount = 0 %}
{% set cardIndex = 0 %}


<div class="row" data-section="02">
    <div class="col-12">
        <div class="c-page-head c-page-head-xs">
            <a href="{{link}}" ><div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div></a>
            {# <a href="{{link}}" class="c-page-head__link">View all</a> #}
        </div>
    </div>
</div>


<div class="row"> 

    <div class="col-12 col-md-8 order-md-2 u-tablet-border-left u-desktop-border-left">
        <div class="row">
            <div class="col-12 u-desktop-margin-bottom-40">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 1200, height: 1200},
                            containerClass: "card-3-mobile card-5-tablet card-5-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
                <hr class="o-rule d-md-none">
            </div>
            <div class="col-10 offset-1 col-md-12 offset-md-0 d-md-none d-lg-block">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 640, height: 480},
                            containerClass: "card-8-mobile card-6-desktop"
                        }) | raw}}
                {% endif %}
                
            </div>
        </div>
    </div>
    <div class="col-12 d-md-none">
        <hr class="o-rule">
    </div>
    <div class="col-12 col-md-4 order-md-1">
        <div class="row justify-content-center">
            <div class="col-12 d-none d-md-block d-lg-none">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 600, height: 600},
                            containerClass: "card-4-tablet"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
                <hr class="o-rule">
            </div>
            <div class="col-10 col-md-12 col-lg-10">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 600, height: 600},
                            containerClass: "card-8-mobile card-4-tablet card-4-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
            </div>
            <div class="col-12 u-margin-top-30">
                {% if adslots[0] is defined %}
                    <div class="j-adslot advertisement__leftcol" id="{{adslots[0]}}" data-adshape="mrec"></div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
