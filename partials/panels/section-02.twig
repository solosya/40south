{% set articleCount = 0 %}
{% set cardIndex = 0 %}


<div class="row" data-section="02">
    <div class="col-12">
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div>
            {# <a href="{{link}}" class="c-page-head__link">View all</a> #}
        </div>
    </div>
</div>


<div class="row"> 

    <div class="col-12 col-md-8 order-md-2 u-border-left">
        <div class="row">
            <div class="col-12 u-desktop-margin-bottom-40 u-tablet-margin-bottom-30">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 1200, height: 1200},
                            containerClass: "card-2-mobile card-3-tablet card-3-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
                <hr class="o-rule d-md-none">
            </div>
            <div class="col-8 offset-2 col-md-12 offset-md-0">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 600, height: 400},
                            containerClass: "card-12-mobile card-10-tablet card-10-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
                
            </div>
        </div>
    </div>
    <hr class="o-rule d-md-none">
    <div class="col-12 col-md-4 order-md-1">
        <div class="row">
            <div class="col-8 offset-2 col-md-12 offset-md-0">
                {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 600, height: 600},
                            containerClass: "card-12-mobile card-12-tablet card-12-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
            </div>
            <div class="col-12 col-lg-3">
                {% if adslots[0] is defined %}
                    <div class="j-adslot" id="{{adslots[0]}}" data-adshape="mrec"></div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
