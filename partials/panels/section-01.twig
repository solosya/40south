{% set articleCount = 0 %}
{% set eventCount = 0 %}
{% set cardIndex = 0 %}


<div class="row" data-section="01">
    <div class="col-12">
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div>
            {# <a href="{{link}}" class="c-page-head__link">View all</a> #}
        </div>
    </div>


    <div class="col-12 col-md-8 u-border-right">
        {{this.render('../_single-article.twig', {
            article: articles[articleCount], 
            position: (articleCount+1),
            imageSize: {width: 720, height: 420},
            containerClass: "card-2-mobile card-2-tablet card-2-desktop"
        }) | raw}}
        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
    </div>

    <div class="col-12 col-md-4">
        <div class="row">
            {% for i in 0..1 if articles[articleCount] %}
                {% set indexClass = [' u-border-bottom u-margin-bottom-50 u-desktop-padding-bottom-50',''] %}
                <div class="col-12">
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 300, height: 260},
                        containerClass: "card-12-mobile card-12-tablet card-12-desktop" ~ indexClass[i]
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                </div>
            {% endfor %}  
        </div>
        
    </div>
    
    
</div> <!-- row -->


