{% set articleCount = 0 %}
{% set cardIndex = 0 %}


<div class="row" data-section="03">
    <div class="col-12">
        <div class="c-page-head c-page-head-xs">
            <a href="{{link}}" ><div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div></a>
            {# <a href="{{link}}" class="c-page-head__link">View all</a> #}
        </div>
    </div>
</div>



<div class="row">
    <div class="col-12 ">
        {{this.render('../_single-article.twig', {
            article: articles[articleCount], 
            position: (articleCount+1),
            imageSize: {width: 1800, height: 800},
            containerClass: "card-3-mobile card-7-tablet card-7-desktop u-desktop-padding-bottom-40 u-desktop-border-bottom u-desktop-margin-bottom-40"
        }) | raw}}
        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
        <hr class="o-rule d-lg-none">
    </div>

    <div class="col-12">
        <div class="row">
            {% set indexClass = [' u-tablet-border-right u-desktop-border-right',''] %}
            {% for i in 0..1 if articles[articleCount] %}
                <div class="col-12 col-md-6{{indexClass[i]}}">
                    <div class="row justify-content-center">
                        <div class="col-10 col-lg-8">
                            {{this.render('../_single-article.twig', {
                                article: articles[articleCount], 
                                position: (articleCount+1),
                                imageSize: {width: 720, height: 720},
                                containerClass: "card-8-mobile card-8-tablet card-8-desktop"
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        </div>
                    </div>
                </div>
            {% endfor %}  
        </div>
        
    </div>


    
</div> <!-- row -->