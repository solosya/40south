{% set articleCount = 0 %}
{% set cardIndex = 0 %}
    <div class="c-page-head__breaking">
            <h2 class="container c-page-head__breaking__head">{{title}}</h2>
    </div>
    
    <div class="u-margin-top-15 u-tablet-margin-top-20 u-mobile-margin-top-40">
        <div class="row">
            <div class="col-12 col-lg-9">
                {{this.render('../_single-article.twig', {
                    article: articles[articleCount], 
                    position: (articleCount+1),
                    imageSize: {width: 740, height: 360},
                    containerClass: "card-1-mobile card-1-tablet card-1-desktop"
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            </div>


            <div class="col-12 col-lg-3">    
                {{this.render('../_single-article.twig', {
                    article: articles[articleCount], 
                    containerClass: "card-5-mobile card-5-tablet card-2-desktop-up"
                }) | raw}}
            </div>
        </div> <!-- row -->

        <div class="row u-desktop-margin-bottom-30">
            
            
                {% for i in 0..3 if articles[articleCount] %}
                    <div class="col-12 col-md-6 col-lg-3">
                        {{this.render('../_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 150, height: 126},
                            containerClass: "card-5-mobile card-4-tablet card-8-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    </div>
                {% endfor %}
            
        </div>
    </div>



    <div class="row">

        
            {# {% for i in 0..2 if articles[articleCount] %}
                <div class="col-12 col-lg-3">
                    {{this.render('../_single-article.twig', {
